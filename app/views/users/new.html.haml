%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      %header
        %h1 Register
      %fieldset
        .form-group
          .col-sm-6
            = bootstrap_form_for(@user) do |f|
              = f.email_field :email
              = f.password_field :password
              = f.text_field :name
              = f.submit "Register"